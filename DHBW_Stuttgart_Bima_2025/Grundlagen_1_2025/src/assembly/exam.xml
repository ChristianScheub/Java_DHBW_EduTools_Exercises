<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>exam-eclipse</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/.idea</directory>
			<outputDirectory>.idea</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/.run</directory>
			<outputDirectory>.run</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/docs</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>*.pdf</include>
			</includes>
			<excludes>
				<exclude>Modul*.*</exclude>
				<exclude>*deckblatt*.*</exclude>
				<exclude>*IntelliJ.*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/java</directory>
			<outputDirectory>src/main/java</outputDirectory>
			<excludes>
				<exclude>**/solution/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/java</directory>
			<outputDirectory>src/test/java</outputDirectory>
			<includes>
				<include>package-info.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/assembly</directory>
			<outputDirectory>src/assembly</outputDirectory>
			<includes>
				<include>submission.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/eclipse</directory>
			<outputDirectory>src/eclipse</outputDirectory>
			<includes>
				<include>*-Abgabe.launch</include>
			</includes>
		</fileSet>

		<!--
		<fileSet>
			<directory>${project.basedir}/src/main/java</directory>
			<outputDirectory>src/main/java</outputDirectory>
			<includes>
				<include>**/impl/**/package-info.java</include>
			</includes>
		</fileSet>
		-->
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/pom.xml</source>
			<outputDirectory></outputDirectory>
		</file>
	</files>
</assembly>
